{
    "name": "unilago-backend",
    "version": "1.0.0",
    "description": "Backend da rede social da AtlÃ©tica de ADS Unilago",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:routes": "node scripts/test-routes.js",
        "create:test-user": "node scripts/create-test-user.js",
        "generate:test-token": "node scripts/generate-test-token.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "docker:dev": "docker-compose up",
        "docker:build": "docker build -t unilago-backend .",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop ecosystem.config.js",
        "pm2:restart": "pm2 restart ecosystem.config.js",
        "pm2:delete": "pm2 delete ecosystem.config.js",
        "pm2:logs": "pm2 logs",
        "pm2:status": "pm2 status",
        "prepare": "node -e \"process.env.NODE_ENV !== 'production' && require('husky').install()\""
    },
    "dependencies": {
        "axios": "^1.8.4",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-validator": "^6.12.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.0.12",
        "multer": "^1.4.3",
        "pm2": "^5.1.2",
        "express-rate-limit": "^6.7.0",
        "socket.io": "^4.6.1"
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "jest": "^27.3.1",
        "nodemon": "^2.0.14",
        "prettier": "^2.4.1",
        "supertest": "^6.1.6"
    },
    "engines": {
        "node": ">=14.0.0"
    }
}
