{
    "name": "unilago-backend",
    "version": "1.0.0",
    "description": "Backend da rede social da AtlÃ©tica de ADS Unilago",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:routes": "node scripts/test-routes.js",
        "create:test-user": "node scripts/create-test-user.js",
        "generate:test-token": "node scripts/generate-test-token.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "docker:dev": "docker-compose up",
        "docker:build": "docker build -t unilago-backend .",
        "pm2:start": "pm2 start ecosystem.config.js",
        "pm2:stop": "pm2 stop ecosystem.config.js",
        "pm2:restart": "pm2 restart ecosystem.config.js",
        "pm2:delete": "pm2 delete ecosystem.config.js",
        "pm2:logs": "pm2 logs",
        "pm2:status": "pm2 status",
        "prepare": "node -e \"process.env.NODE_ENV !== 'production' && require('husky').install()\""
    },
    "dependencies": {
        "axios": "^1.8.4",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.0.3",
        "multer": "^1.4.5-lts.1",
        "pm2": "^5.3.0",
        "express-rate-limit": "^6.11.2",
        "socket.io": "^4.6.1"
    },
    "devDependencies": {
        "eslint": "^8.38.0",
        "eslint-config-prettier": "^8.8.0",
